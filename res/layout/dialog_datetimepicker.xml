<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical|center_horizontal"
	android:layout_margin="15dp"
	android:background="@drawable/datetimepickershap"
	android:orientation="vertical" >
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="@drawable/single_lable_bg" >
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="20dp"
			android:gravity="center_vertical"
			android:text="Date &amp; Time Picker"
			android:textColor="@color/black" >
		</TextView>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignParentBottom="true"
			android:background="#dedede" />
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/pickerLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dp"
		android:layout_marginTop="15dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal" >
		<DatePicker
			android:id="@+id/datePicker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TimePicker
			android:id="@+id/timePicker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal" >
		<Button
			android:id="@+id/datetimepicker_btn_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/button_lablel_select"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:text="Cancel"
			android:textColor="@color/text_color"
			android:textSize="14sp" />
		<Button
			android:id="@+id/datetimepicker_btn_ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:background="@drawable/button_lablel_select"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:text="OK"
			android:textColor="@color/text_color"
			android:textSize="14sp" />
	</LinearLayout>
</LinearLayout>