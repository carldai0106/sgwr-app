<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/slide_menu_background"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="#3d4140"
	android:orientation="horizontal" >
	<ImageView
		android:id="@+id/slide_menu_prev_bgcolor"
		android:layout_width="5dp"
		android:layout_height="match_parent"
		android:background="#3d4140" />
	<ImageView
		android:id="@+id/slide_menu_icon"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:src="@drawable/client_icon" />
	<TextView
		android:id="@+id/slide_menu_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="10dp"
		android:paddingBottom="10dp"
		android:paddingTop="12dp"
		android:text="Select Client"
		android:textColor="@color/white"
		android:textSize="@dimen/text_size_14" >
	</TextView>
</LinearLayout>