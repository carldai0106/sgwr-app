<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_relativelayout_header"
	android:layout_width="fill_parent"
	android:layout_height="40dip"
	android:background="@drawable/widget_head_bg" >
	<ImageView
		android:id="@+id/head_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
		android:src="@drawable/client_icon" />
	<TextView
		android:id="@+id/head_title"
		style="@style/head_title"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
		android:layout_toRightOf="@id/head_logo"
		android:text="@string/select_client" />
	<ProgressBar
		android:id="@+id/head_progress"
		style="@style/loading_small"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
		android:layout_toRightOf="@id/head_title"
		android:visibility="gone" />
</RelativeLayout>