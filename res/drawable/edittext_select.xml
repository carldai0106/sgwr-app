<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
		<shape>
			<!-- <gradient android:startColor="#72B0D4" android:endColor="#4B88B6"
				android:angle="270" /> -->
			<gradient android:startColor="#FFFFFF" android:endColor="#FFFFFF" />
			<stroke android:width="1dip" android:color="#145072" />
			<corners android:radius="8dp" />
			<padding  android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp" />
		</shape>
	</item>
 
	<item android:state_focused="true">
		<shape>
			<!-- <gradient android:startColor="#72B0D4" android:endColor="#4B88B6"
				android:angle="270" />-->
			<gradient android:startColor="#FFFFFF" android:endColor="#FFFFFF" />
			<stroke android:width="1dip" android:color="#145072" /> 
			<corners android:radius="8dp" />
			<padding  android:top="5dp" android:bottom="5dp" android:left="8dp" android:right="8dp" />
		</shape>
	</item>
 
	<item>
		<shape>
			<!-- <gradient android:startColor="#5F9CC5" android:endColor="#396B9E"
				android:angle="270" /> -->
			<gradient android:startColor="#FFFFFF" android:endColor="#FFFFFF" />
			<stroke android:width="1dip" android:color="#CCCCCC" />
			<corners android:radius="8dp" />
			<padding  android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp" />
		</shape>
	</item>
</selector>
