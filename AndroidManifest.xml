<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.sgwr.app"
	android:versionCode="1"
	android:versionName="1.1.1.1" >
	<uses-sdk
		android:maxSdkVersion="19"
		android:minSdkVersion="8" />
	<instrumentation
		android:name="android.test.InstrumentationTestRunner"
		android:targetPackage="com.sgwr.app" >
	</instrumentation>
	<application
		android:name=".AppContext"
		android:allowBackup="true"
		android:icon="@drawable/logo"
		android:label="@string/app_name" >
		<uses-library android:name="android.test.runner" />
		<!--
        <activity
			android:name=".ui.TestActivity"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		-->
		<activity
			android:name=".AppSplash"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.Login"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.Main"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.SelectClient"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.SelectLocation"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.ActivityIncident"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.CameraPhoto"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.AttachListActivity"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.IncidentContact"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.EmailActivity"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.AddressBook"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.IncidentOtherCnd"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.IncidentContactList"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		<activity
			android:name=".ui.ConfigDialog"
			android:configChanges="keyboardHidden|orientation"
			android:launchMode="standard"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.HalfTranslucent" />
		<activity
			android:name=".ui.DateTimePickerDialog"
			android:configChanges="keyboardHidden|orientation"
			android:launchMode="standard"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.HalfTranslucent" />
		<activity
			android:name=".ui.CheckDateListDialog"
			android:configChanges="keyboardHidden|orientation"
			android:launchMode="standard"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.HalfTranslucent" />
		<activity
			android:name=".ui.IncidentConditionDialog"
			android:configChanges="keyboardHidden|orientation"
			android:launchMode="standard"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.HalfTranslucent"
			android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
		<activity
			android:name=".ui.SelectContactType"
			android:configChanges="keyboardHidden|orientation"
			android:launchMode="standard"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.HalfTranslucent" />
		<activity
			android:name=".ui.IncidentReviewDialog"
			android:configChanges="keyboardHidden|orientation"
			android:launchMode="standard"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.HalfTranslucent"
			android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
	</application>
	<!-- 允许应用程访问网络的权限 -->
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- 允许应用程序获取网络状态信息的权限 -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<!-- 允许应用程序获取Wifi网络状态信息的权限 -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<!-- 允许应用程序得到写入SD卡的权限 -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<!-- 允许一个程序打开窗口使用 TYPE_SYSTEM_ALERT，显示在其他所有程序的顶层 -->
	<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
	<!-- 允许程序重新启动其他程序 -->
	<uses-permission android:name="android.permission.RESTART_PACKAGES" />
	<uses-permission android:name="android.permission.RUN_INSTRUMENTATION" />
	<!-- 在SD卡中创建与删除文件权限 -->
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
</manifest>